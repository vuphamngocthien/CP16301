    <div class="container">
        <div class="row pad-botm">
            <div class="col-md-12">
                <h1 class="header-line" style="margin-top: 50px;">Bảng sản phẩm</h1>
                <a style="color: black; text-decoration-line: none; font-weight: 900; 
                    width: 150px; height: 35px; border-width: 2px; border-color: black; 
                    border-radius: 10px;" href="bang-san-pham/them-moi" class="btn btn-link">Thêm Sản Phẩm </a>
                    
            </div>
           
        </div>
        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div >
                    <div>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr >
                                        <th style="background: #DCDCDC;">STT</th>
                                        <th style="background: #DCDCDC;">Id</th>
                                        <th style="background: #DCDCDC;">Name</th>
                                        <th style="background: #DCDCDC;">Price</th>
                                        <th style="background: #DCDCDC;">Quantity</th>
                                        <th style="background: #DCDCDC;">Description</th>
                                        <th style="background: #DCDCDC;">Category</th>
                                        <th style="background: #DCDCDC;">Image</th>
                                        <th style="background: #DCDCDC;">Released</th>
                                        <th style="background: #DCDCDC;">Action</th>
                                    </tr>
                                </thead>
                                {{#each products}}
                                <tbody>
                                    <tr>
                                        <td>{{this.index}}</td>
                                        <td>{{this._id}}</td>
                                        <td>{{this.name}}</td>
                                        <td>{{this.price}}</td>
                                        <td>{{this.quantity}}</td>
                                        <td>{{this.description}}</td>
                                        <td>{{this.category_id.name}}</td>
                                        <td>
                                            <img src="{{this.image}}" width="100" height="100" />
                                        </td>
                                        <td>{{this.released}}</td>
                                        <td>
                                            {{!--                  thieu ngoac kep       --}}
                                            <button onclick="edit('{{this._id}}')" class="btn btn-link" 
                                                style="width: 70px; height: 45px; background: aqua; 
                                                border-radius: 5px; color: white; text-decoration-line: none; margin-left: 12%;">Edit</button>
                                            <button onclick="onClickDelete('{{this._id}}');" data-toggle="modal"
                                                style="width: 70px; height: 45px; background: aqua; 
                                                border-radius: 5px; color: white; text-decoration-line: none; margin-left: 12%; margin-top: 5px;"
                                                data-target="#myModal" class="btn btn-link">Delete</button>
                                        </td>
                                    </tr>
                                </tbody>
                                {{/each}}
                            </table>
                        </div>
                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
</div>

<!--  Modals-->
<div>
    <div >
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
            aria-hidden="true">
