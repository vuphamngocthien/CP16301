                    </div>
                    <div class="modal-body">
                        Bạn có muốn xóa sản phẩm này không?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" onclick="onDelete()">Yes</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Modals-->

<script>
  const edit = (id) =>{
    // http://localhost:3000/san-pham/:id/edit
    window.location.href=`http://vups17505.herokuapp.com//san-pham/bang-san-pham/${id}/edit`
  }
  
  let deleted_id;

    const onClickDelete = (id) => {
        deleted_id = id;
    }

    const fetchAPI = async (url, option) => {
        const res = await fetch(url, option);
        return res.json();
    }

    const onDelete = async () => {
        const url = `https://vups17505.herokuapp.com/san-pham/bang-san-pham/${deleted_id}/delete`;
        const option = {
            method: 'delete',
            headers: { 'Content-Type': 'application/json' }
        }
        try {
            await fetchAPI(url, option);
            window.location.href = '/san-pham/bang-san-pham';
        } catch (e) { console.log('Delete error: ', e) }
    }

</script>

